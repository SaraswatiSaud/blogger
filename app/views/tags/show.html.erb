<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>

<% if logged_in? %>

<%= link_to "delete", article_path(@tag), method: :delete, data: {confirm: "Really delete the tag?"} %><br/>
<%= link_to "edit", edit_article_path(@tag) %>

<% end %>
